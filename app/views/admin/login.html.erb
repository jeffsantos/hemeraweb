<div class="hemeraweb-form">
    <fieldset>
        <legend>
            Please Log In
        </legend>
        <% form_tag do %>
        <p>
            <label for="name">
                Name:
            </label>
            <%= text_field_tag :name, params[:name] %>
        </p>
        <p>
            <label for="password">
                Password:
            </label>
            <%= password_field_tag :password, params[:password] %>
        </p>
        <p>
            <%= submit_tag "Login" %>
        </p>
		<p>
			<%= link_to "Add user", :action => "add_user"%>
		</p>
        <% end %>
    </fieldset>
</div>
